\DeclareDocumentCommand{\undernote}{ s O{} m +m }{%
%%% #1（star）注釈をparboxに包む，
%%% #2 (optinal): 注釈を下にずらす「行数」（与えない場合，自動設定），
%%% #3: 注釈をつける語句，#4: 注釈
   \settowidth{\undernote@textlen@tempo}{#3}%
   \begingroup%
   \stepcounter{noteid}%
   \ifmmode%
      \@note@save@conters%
      \savepos%
      \expandafter\@math@note%
   \else%
      \leavevmode%
      \savepos%
      \expandafter\@text@note%
   \fi%
   {#2}{#3}{%
     \ifnum\ltjgetparameter{direction}=4%
       \begin{varwidth}[t]{\maxdimen}\IfBooleanTF{#1}{\wrap@undernote@par{#4}}{\wrap@undernote{#4}}\end{varwidth}%
     \else%
       \raisebox{.38\zw}{\begin{varwidth}[t]{\maxdimen}\IfBooleanTF{#1}{\wrap@undernote@par{#4}}{\wrap@undernote{#4}}\end{varwidth}}%
     \fi%
     }%
   \endgroup}
