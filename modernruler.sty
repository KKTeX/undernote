                      }
                  }
                  {
                    {\color{\l_mrule_color_tl} \hrule width \l_mrule_width_dim height \l__mrule_tmp_remaining_dim}
                    \dim_set:Nn \l__mrule_tmp_remaining_dim { 0pt }
                  }
